<resources>
    <string name="app_name">Quiz Novelístico</string>
    
    <!-- Home screen -->
    <!-- Number of questions to be asked in this quiz -->
    <string name="number_of_questions">Numero de perguntas:</string>
    <!-- Displayed on the button which begins the quiz when clicked -->
    <string name="start_quiz">Começar Quiz</string>
    
    <!-- Displayed during the course of a quiz -->
    <!-- Question answered correctly -->
    <string name="answer_correct">Certo!</string>
    <!-- Question answered incorrectly -->
    <string name="answer_incorrect">Errado!</string>
    
    <!-- Displayed at the end of a quiz -->
    <!-- End of quiz header -->
    <string name="quiz_end_header">Fim do Quiz</string>
    <!-- Number of correct answers header -->
    <string name="correct_answers_header">Certo</string>
    <!-- Number of incorrect answers header -->
    <string name="incorrect_answers_header">Errado</string>
    <!-- End of quiz accept button -->
    <string name="quiz_end_accept_button">Voltar ao menu</string>
    
    <!-- Error strings -->
    
    <!-- Invalid input for number of questions -->
    <string name="invalid_number_of_questions">O numero de questoes é inválido.</string>
    <!-- Problem while loading the questions from the asset files -->
    <string name="question_reading_exception">Ocorreu um erro. Por favor envie um email aos desenvolvedores.</string>
	<!-- Number of strings that could not be parsed -->
	<plurals name="question_reading_parse_fail_number">
        <item quantity="one">Ocorreu um erro. Por favor envie um email aos desenvolvedores.</item>
        <item quantity="other">Ocorreu um erro. Por favor envie um email aos desenvolvedores.</item>
    </plurals>

</resources>
